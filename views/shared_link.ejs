<%- include("partials/header") %>

<div class="container">

    <div>
        <img src="<%= group.image %>" alt="" width="200px", height="200px">
        <br>
        <p><b>Group Name: </b><b><%= group.name %></b></p>

        <p><b>Total Member: </b><%= total_members %></p>

                
        <% if(available != 0){ %>
            <p>Avaliable for <b> <%= available %></b> Members Only</p>
        <% } %>


        <% if(isOwner) { %>
            <p>You are the creator of this group, so you can't join this group </p>
        <% } else if(isJoined != 0) { %>
            <p>You have already join this group </p>
        <% } else if(available == 0) { %>
           <p>Group already filled</p>    
        <% } else { %>
            <button class="btn btn-primary join-now" data-id="<%= group._id %>"> Join now</button>
        <% } %>

    </div>

</div>




<%- include("partials/footer_top") %>

<script src="/index/joinGroup.js"></script>

<%- include("partials/footer_down") %>
